{
  "manifest_version": 3,
  "name": "README AI Helper",
  "description": "Surface README AI entry points on GitHub and manage authentication.",
  "version": "0.1.0",
  "permissions": ["storage", "scripting", "tabs", "sidePanel"],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://ai-readme-generator-be-912048666815.us-central1.run.app/*",
    "https://ai-readme-generator-912048666815.us-central1.run.app/*"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["dist/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "README AI"
  }
}
