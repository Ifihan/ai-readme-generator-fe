{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "es2020",
    "target": "es2020",
    "lib": [
      "dom",
      "es2020"
    ],
    "moduleResolution": "node",
    "strict": true,
    "types": [
      "chrome"
    ],
    "noEmit": false,
    "emitDeclarationOnly": false,
    "sourceMap": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}